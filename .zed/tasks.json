[
  {
    "label": "Run App",
    "command": "./gradlew",
    "args": ["run"],
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run Tests",
    "command": "./gradlew",
    "args": ["test"],
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Build App",
    "command": "./gradlew",
    "args": ["build"],
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Clean Build",
    "command": "./gradlew",
    "args": ["clean", "build"],
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run Tests (Verbose)",
    "command": "./gradlew",
    "args": ["test", "--info"],
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always"
  }
]
